package org.spring.UtilityClass;

public class QueryOfDatabase {
	
	/*********************************************************************************************************************/
	/*									Admin Queries																			 */
	/*********************************************************************************************************************/
	
	public static String adminLoginQuery ="select userId,email,password from owner123 where email=? and password=?";
	
	/***********************************End**********************************************************************************/
	
	
	/*********************************************************************************************************************/
	/*									Employee Queries																			 */
	/*********************************************************************************************************************/
	
	public static String employeeLoginQuery ="select empId,email,password from employee123 where email=? and password=?";
	public static String addNewEmployeeData ="insert into employeedata values(emp.nextVal,?,?,?,?,?,?,?,?,?,?,?,?,'Employee')";
	
	
	/***********************************End********************************************************************************/
	
	
	/*********************************************************************************************************************/
	/*									Customer Queries																			 */
	/*********************************************************************************************************************/
	
	public static String customerLoginQuery ="select custId,email,autogeneratedPwd from customersdata  where email=? and autogeneratedPwd=?";
	
	public static String forgotPwdAdmin = "select email,password,userId from owner where email=? ";
	public static String adminPass = "select userId,email,password from owner where userId=? ";
	
	
	public static String saveCustomers = "insert into customersdata values(cust.nextVal,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,'Customer')";
	//public static String changePasswordByCustomers = "select autogeneratedPwd,custId from customersdata where autogeneratedPwd=?";
	public static String updatePass = " update customersdata set autogeneratedPwd=? where custId=?";

