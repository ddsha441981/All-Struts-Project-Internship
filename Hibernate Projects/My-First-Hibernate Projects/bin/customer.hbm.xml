<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">  
 <hibernate-mapping package="com.hibernate.example">
 <class name="Customer" table="customer_info">
 	<id name="cid" column="cust_id">
 	<generator class="assigned/>
 	</id>
 	<property name="cname" column="cust_name"></property>
 	<component name="date" class="Date">
 	<property name="dd" column="dd"></property>
 	<property name="mm" column="mm"></property>
 	<property name="yy" column="yy"></property>
 	
 	</component>
 
 </class>
 
 
 </hibernate-mapping>